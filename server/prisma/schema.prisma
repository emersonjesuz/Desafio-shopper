generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5434/postgres?schema=public"
}

model Drivers {
  id                Int       @id @default(autoincrement())
  name              String
  description       String
  vehicle           String
  minimumKilometers Int
  tax               Float
  Reviews           Reviews[]
  Rides             Rides[]
}

model Reviews {
  id        Int     @id @default(autoincrement())
  rating    Int
  comment   String
  driver_id Int
  driver    Drivers @relation(fields: [driver_id], references: [id])
}

model Rides {
  id          Int      @id @default(autoincrement())
  customer_id String
  date        DateTime
  origin      String
  destination String
  distance    Int
  duration    String
  driver_id   Int
  drivers     Drivers  @relation(fields: [driver_id], references: [id])
  value       Int
}
